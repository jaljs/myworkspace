#ifdef __GNUC__ 
  #define PUTCHAR_PROTOTYPE int __io_putchar(int ch)   
#else 
  #define PUTCHAR_PROTOTYPE int fputc(int ch, FILE *f) 
#endif /* __GNUC__ */ 
PUTCHAR_PROTOTYPE 
{ 
  USART_SendData(USART1, (u16) ch); 
  while(USART_GetFlagStatus(USART1, USART_FLAG_TC) == RESET) 
  { 
  } 
  return ch; 
}
